@model AppUser
@{
    ViewData["Title"] = "Update Your Info";
}
 
<div>
  <div class="row justify-content-center">
    <div class="col-10">
        <section>
                <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
                <div class="row align-items-center">
                    
                    <div class="col-md-6">
                            <h2 style="align-items:center">Profile Info</h2>
                            <div asp-validation-summary="All" style="color:red"></div>
                        <div class="form-floating mb-3">
                            <label asp-for="UserName" class="form-label">User Name</label>
                            <input asp-for="UserName" disabled class="form-control" aria-required="true" placeholder="User Name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" disabled class="form-control" aria-required="true" placeholder="Full Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                            <div class="form-floating mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" disabled class="form-control" aria-required="true" placeholder="Full Name" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                        @if(Model.PhoneNumber!=null){
                                <div class="form-floating mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                                    <input asp-for="PhoneNumber" disabled class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            }

                     </div>

                    <!-- Image on the other side -->
                    <div class="col-md-6">
                        <div class="mb-3 p-1">
                             
                              <figure>
                                    <img id="ProfileImage" class="img-fluid img-thumbnail" src="@Model.ProfileImge" alt="Image" class="img-fluid" style="width:200px;height:240px;margin-top:30px" />
                                     <figcaption>Profile Image  </figcaption>
                              </figure>
                                
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>

</div>
</div>



@section Scripts {
   <script>
        document.getElementById('imageInput').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('ProfileImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
   </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

