@model LoginViewModel
@{
    ViewData["Title"] = "LogIn";
}

 
<div class="row justify-content-center">
    <div class="col-10">
         
        <form asp-action="Login" asp-controller="Account" method="post">
            <h2>Log In</h2>

            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="form-floating mb-3">
                <label asp-for="UserName" class="form-label">User Name</label>
                <input asp-for="UserName" class="form-control" aria-required="true" placeholder="First Name" />

                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="checkbox mb-3">
                <label>
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(model => model.RememberMe)
                </label>

            </div>
            <div>
                <button id="login-submit" type="submit"  class="w-100 btn btn-lg" style="background:#33cabb;color:white">Log In</button>
            </div>

        </form>
           
           

 

            <div>
                <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
         
    </div>
</div>

