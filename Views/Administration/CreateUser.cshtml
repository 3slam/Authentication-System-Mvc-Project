@model  CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}


<div class="row justify-content-center">
    <div class="col-10">
        <section>
            <form asp-action="CreateUser" asp-controller="Administration" method="post" enctype="multipart/form-data">
                <div class="row align-items-center">

                    <div class="col-md-6">
                        <h2 style="align-items:center">Create a User.</h2>
                        <div asp-validation-summary="All" style="color:red"></div>
                        <div class="form-floating mb-3">
                            <label asp-for="UserName" class="form-label">User Name</label>
                            <input asp-for="UserName" class="form-control" aria-required="true" placeholder="User Name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" aria-required="true" placeholder="Full Name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                            <input asp-for="PhoneNumber"   class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <label class="form-label">Profile Image</label>
                            <input type="file" id="imageInput" class="form-control" name="file" />

                        </div>

                        <br />
                        <div class="form-group">

                            <input type="submit" value="Create" class="btn btn-outline-success" />
                            <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-primary">Back to Users List</a>
                        </div>
                    </div>

                    <!-- Image on the other side -->
                    <div class="col-md-6">
                        <div class="mb-3 p-1">

                            <figure>
                                <img id="ProfileImage" class="img-fluid img-thumbnail" src="\Images\defaultProductImage.png" alt="Image" class="img-fluid" style="width:200px;height:240px;" />
                                <figcaption>Profile Image  </figcaption>
                            </figure>

                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>

</div>
</div>



@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function () {
            var file = this.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('ProfileImage').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

 
