@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<div>
  <div class="row justify-content-center">
    <div class="col-10">
        <section>
                <form asp-action="EditRole" asp-controller="Administration">
                <div class="row align-items-center">
                    
                    <div class="col-md-6">
                            <h2 style="align-items:center;margin:10px">Edit Role</h2>
                            <div asp-validation-summary="All" style="color:red"></div>

                        <div class="form-floating mb-3">
                                <label asp-for="Id" class="form-label"></label>
                                <input type="hidden" asp-for="Id" />
                                <input asp-for="Id" disabled class="form-control">
       
                        </div>

                        <div class="form-floating mb-3">
                               <label asp-for="RoleName" class="form-label"></label>
                                <input asp-for="RoleName" class="form-control" aria-required="true" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                         <div asp-validation-summary="All"></div>
                            <input type="submit" value="Update" class="btn btn-outline-success" />
                            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Back to List</a>
                      </div>
 
                </div>
            </form>
        </section>
    </div>

</div>
</div>

 